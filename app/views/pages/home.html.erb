<body onload="showResult('target');">
<div class="container text-center">
  <h1>Calculatrice</h1>
</div>

<div class="container border">
  <div class="row">
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=7 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=8 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=9 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-3">
      <input type="button" class="btn" value="+" id="add()" onclick="inputAction(id)" />
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=4 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=5 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=6 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-3">
      <input type="button" class="btn" value="-" id="substract()" onclick="inputAction(id)" />
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=1 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=2 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=3 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-3">
      <input type="button" class="btn" value="*" id="multiply()" onclick="inputAction(id)" />
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2 bg-warning">
      <input type="button" class="btn" value=0 onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-2">
      <input type="button" class="btn" value="." onclick="inputValue(value); showBuffer('target');" />
    </div>
    <div class="col-lg-2">
      <input type="button" class="btn" value="CLEAR" onclick="resetAll(); showResult('target');" />
    </div>
    <div class="col-lg-3">
      <input type="button" class="btn" value="/" id="divide()" onclick="inputAction(id)" />
    </div>
</div>

<input type="button" class="btn btn-primary" value="Result" onclick="inputResult(); showResult('target');"/>
<div class="btn btn-danger" id="target"></div>
